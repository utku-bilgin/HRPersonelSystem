@model IEnumerable<CompanyDTO>
<style>
    /* Butonun arka plan rengini ve metin rengini belirleyin */
    .btn.btn-primary {
        background-color: #94A684;
        color: #000000;
        transition: background-color 0.3s, color 0.3s;
        border: 2px solid #AEC3AE;
    }



    .card.mb-4 {
        background: linear-gradient(to right, #E4E4D0, #EEE9DA, #E4E4D0);
        color: #000000;
    }
</style>

<div class="container-xxl flex-grow-1 container-p-y">

    <div class="btn-container">
        <a asp-area="CompanyDirector" asp-controller="EmployeeAll" asp-action="IndexIsActiveTrue" type="submit" class="btn btn-primary me-2"> Personel Aktif </a>
        <a asp-area="CompanyDirector" asp-controller="EmployeeAll" asp-action="IndexIsActiveFalse" type="submit" class="btn btn-primary me-2" disabled> Personel Pasif </a>
    </div>

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light"> Personel Listesi (İş Haddi Sonlandırılan) </span>
    </h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-3">

            <table class="table table-bordered" id="rejectedExpendituresTable" width="100%" cellspacing="0">

                <thead>
                    <tr>
                        <th>ŞİRKET ADI</th>
                        <th>ŞİRKET ÜNVANI</th>
                        <th>MERSİS NUMARASI</th>
                        <th>VERGİ DAİRESİ</th>
                        <th>VERGİ NUMARASI</th>
                        <th>TELEFON</th>
                        <th>ADRES</th>
                        <th>EMAİL</th>
                        <th>ÇALIŞAN SAYISI</th>
                        <th>KURULUŞ YILI</th>
                        <th>SÖZLEŞME BAŞLANGIÇ TARİHİ</th>
                        <th>SÖZLEŞME BİTİŞ TARİHİ</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0" style="color: black">

                    @foreach (var company in Model)
                    {
                        <tr>
                            <td>@company.CompanyName</td>
                            <td>@company.CompanyTitle</td>
                            <td>@company.MersisNumber</td>
                            <td>@company.TaxOffice</td>
                            <td>@company.TaxNumber</td>
                            <td>@company.Phone</td>
                            <td>@company.Address</td>
                            <td>@company.Email</td>
                            <td>@company.NumberOfEmployees</td>
                            <td>@company.YearOfEstablishment</td>
                            <td>@company.ContractStartDate</td>
                            <td>@company.ContractEndDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
