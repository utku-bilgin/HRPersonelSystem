@model EmployeeUptadeDTO

<div class="container-xxl flex-grow-1 container-p-y">
    <style>
        /* Butonun arka plan rengini ve metin rengini belirleyin */
        .btn.btn-primary {
            background-color: #6096B4;
            color: #000000;
            transition: background-color 0.3s, color 0.3s;
            border: 2px solid #6096B4;
        }

            /* Butonun hover efekti */
            .btn.btn-primary:hover {
                background-color: #93BFCF;
                color: #000000;
                border: 2px solid #6096B4;
            }

        .card.mb-4 {
            background: linear-gradient(to right, #93BFCF, #A6D0DD, #93BFCF);
            color: #000000;
        }
    </style>
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Profili Güncelle </span>
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"> Profil Bilgilerim </h5>
                <form asp-area="Employee" asp-controller="Employee" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <!-- Account -->
                    <div class="card-body">

                        <div class="mt-2">
                            <a asp-area="Employee" asp-controller="Employee" asp-action="Details" asp-route-id="@Model.Id" type="submit" class="btn btn-primary me-2"> Personel Detayları </a>
                        </div>
                      

                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <img src="~/images/@Model.ImagePath" alt="user-avatar" class="d-block rounded" height="100px" width="100px" id="uploadedAvatar">
                            <div class="button-wrapper">
                                <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input asp-for="Photo" type="file" accept="image/*" class="formaccount-file-input" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                                </label>

                            </div>
                        </div>

                    </div>
                    <hr class="my-0">
                    <div class="card-body">

                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="row">

                            <div class="mb-3 col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                                <input asp-for="PhoneNumber" class="form-control" type="number" autofocus="" style="background-color: #EEE9DA;">
                            </div>

                            <div class="mb-3 col-md-6">
                                <label asp-for="Address" class="form-label">Adres</label>
                                <textarea asp-for="Address" class="form-control" type="text" autofocus="" style="background-color: #EEE9DA;"></textarea>
                            </div>

                        </div>

                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2"> Profili Güncelle </button>
                        </div>

                      

                      

                    </div>
                    <!-- /Account -->
                </form>
            </div>
        </div>
    </div>
</div>