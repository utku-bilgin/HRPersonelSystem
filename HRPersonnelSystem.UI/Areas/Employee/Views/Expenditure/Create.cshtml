@model EmployeeExpenditureDTO

<div class="container-xxl flex-grow-1 container-p-y">

    <style>

        .btn.btn-primary {
            background-color: #6096B4;
            color: #000000;
            transition: background-color 0.3s, color 0.3s;
            border: 2px solid #6096B4;
        }

            /* Butonun hover efekti */
            .btn.btn-primary:hover {
                background-color: #93BFCF;
                color: #000000;
                border: 2px solid #6096B4;
            }

        .card {
            background: linear-gradient(to right, #93BFCF, #A6D0DD, #93BFCF);
            color: #000000;
        }

       
    </style>

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light"> Harcama Talebi Oluştur </span>
    </h4>



    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-area="Employee" asp-controller="Expenditure" asp-action="Create" method="post" enctype="multipart/form-data">
                    <!-- Account -->
                    <hr class="my-0">
                    <div class="card-body">



                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="row">

                            <div class="mb-3 col-md-6">

                                <label asp-for="ExpenditureType" class="form-label" style="color: black">Harcama Türü</label>
                                <select asp-for="ExpenditureType" class="form-control" asp-items="@Html.GetEnumSelectList<ExpenditureType>();" autofocus="" style="background-color: #EEE9DA;"></select>
                              
                            </div>
                            <div class="mb-3 col-md-6">

                                <label asp-for="Photo" for="defaultFormControlInput" class="form-label" style="color: black">DOSYA</label>
                                <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp" style="background-color: #EEE9DA;">

                            </div>
                           
                            <div class="mb-3 col-md-6">                        
                                <label asp-for="Amount" class="form-label" style="color: black">Tutar</label>
                                <input asp-for="Amount" class="form-control" type="number" autofocus="" style="background-color: #EEE9DA;">
                           
                            </div>


                            <div class="mb-3 col-md-6">

                                <label asp-for="CurrencyUnit" class="form-label" style="color: black">Para Birimi</label>
                                <select asp-for="CurrencyUnit" class="form-control" asp-items="@Html.GetEnumSelectList<CurrencyUnit>();" autofocus="" style="background-color: #EEE9DA;"></select>                             


                            </div>                           

                        </div>

                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2"> Harcama Talebini Oluştur </button>
                        </div>

                    </div>
                    <!-- /Account -->
                </form>
            </div>
        </div>
    </div>
</div>
