@model EmployeeExpenditureDTO


    <div class="container-xxl flex-grow-1 container-p-y">
    <style>
        .btn.btn-danger {
            background-color: #6096B4;
            color: black;
            transition: background-color 0.3s;
            border: none;
           
        }

        

            .btn.btn-danger:hover {
                background-color: red; 
            }


        .btn.btn-primary {
            background-color: #6096B4;
            color: #000000;
            transition: background-color 0.3s, color 0.3s;
            border: 2px solid #6096B4;
        }

            /* Butonun hover efekti */
            .btn.btn-primary:hover {
                background-color: #93BFCF;
                color: #000000;
                border: 2px solid #6096B4;
            }

        .card {
            background: linear-gradient(to right, #93BFCF, #A6D0DD, #93BFCF);
            color: #000000;
        }
    </style>
        <div style="height:80px;"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">

                    <form asp-area="Employee" asp-controller="Expenditure" asp-action="Delete" method="post" enctype="multipart/form-data">

                        <h4 class="card-header"> <i class='bx bxs-user-circle'></i> Harcama talebini silmek istediğinizden emin misiniz? </h4>

                        <div class="mt-2">
                        <button type="submit" class="btn btn-danger me-2" style="margin-right: 30px;"> Harcama Talebini Sil </button>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <hr class="my-0">
                        <div class="card-body">
                            <div class="row">

                                <div class="mb-3 col-md-6 mt-3">
                                <label asp-for="ExpenditureType" class="form-label" style="color: black"> <i class='bx bx-child'></i> Harcama Tipi </label>
                                <input asp-for="ExpenditureType" class="form-control" type="text" autofocus="" style="background-color: #EEE9DA;"  disabled>
                                </div>

                                <div class="mb-3 col-md-6 mt-3">
                                <label asp-for="Amount" class="form-label" style="color: black"> <i class='bx bx-child'></i> Tutar </label>
                                <input asp-for="Amount" class="form-control" type="text" autofocus="" style="background-color: #EEE9DA;" disabled>
                                </div>

                                <div class="mb-3 col-md-6 mt-3">
                                <label asp-for="CurrencyUnit" class="form-label" style="color: black"> <i class='bx bx-child'></i>Para Birimi </label>
                                <input asp-for="CurrencyUnit" class="form-control" type="text" autofocus="" style="background-color: #EEE9DA;" disabled>
                                </div>

                                <div class="mb-3 col-md-6 my-3">
                                <label asp-for="RequestDate" class="form-label" style="color: black"> <i class='bx bx-child'></i> İstek Tarihi </label>
                                <input asp-for="RequestDate" class="form-control" type="date" autofocus="" style="background-color: #EEE9DA;" disabled>
                                </div>

                                <div class="mb-3 col-md-6 my-3">
                                <label asp-for="ApprovalStatus" class="form-label" style="color: black"> <i class='bx bx-child'></i> Onay Durumu </label>
                                <input asp-for="ApprovalStatus" class="form-control" type="text" autofocus="" style="background-color: #EEE9DA;" disabled>
                                </div>                              

                            </div>
                        </div>

                        <div class="mt-2">
                        <a asp-area="Employee" asp-controller="Expenditure" asp-action="ApprovalPendingExpenditure" type="submit" class="btn btn-primary me-2" style="margin-right: 30px;"> Geri Dön </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
